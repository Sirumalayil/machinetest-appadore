<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:layout_weight="1"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_view"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:maxLines="2"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        app:strokeColor="@color/black"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bosnia and Herzegovina" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/answer_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:visibility="invisible"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@+id/button_view"
        app:layout_constraintEnd_toEndOf="@+id/button_view"
        app:layout_constraintTop_toBottomOf="@+id/button_view"
        tools:text="CORRECT" />

</androidx.constraintlayout.widget.ConstraintLayout>

